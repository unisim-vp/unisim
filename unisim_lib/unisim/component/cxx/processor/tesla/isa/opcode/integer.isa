	/*subop*/0[3]:/*?*/0[1]:sat[1]:m32[1]:/*seg[4]*/?[24]:/*marker*/0[2]: \
	0x2[4]:/*addr_lo*/?[2]:/*addr_imm*/?[1]:/*src3_cm*/?[1]:/*src2_cm*/?[1]:src3_neg[1]:/*src2*/0[6]:\
