  buffer << "qdadd\t" << DisasmRegister(rd)
         << ", " << DisasmRegister(rm) << ", " << DisasmRegister(rn);
};

qdadd.execute = {
  if (not CheckCondition(cpu, cpu.itcond())) return;
  
  uint8_t does_sat, does_sat_tmp;
  uint32_t result;
  
  SignedSatAdd32(result, does_sat_tmp, cpu.GetGPR(rn) , cpu.GetGPR(rn));
