	uint8_t mmCom = ~mm;
	
	uint8_t val = opr16aVal & mmCom;
	
	cpu->memWrite8(opr16a, val);
	
	cpu->ccr->setV(0);
	if (val == 0) { cpu->ccr->setZ(1); } else { cpu->ccr->setZ(0); }
	if ((val & 0x80) == 0x80) { cpu->ccr->setN(1); } else { cpu->ccr->setN(0); }
}

op bclr_idx(0x0D[8]:> <:*xb[XB]:> <:mm[8])

bclr_idx.disasm = {
