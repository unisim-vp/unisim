		cpu->SetSR_V(0);
		cpu->SetSR_N((int32_t)res<0);
		cpu->SetSR_Z(res==0);
		cpu->SetSR_C(0);
	}
	else
	{
		if(((reglist8 >>7)&1)==1)               // if reglist[PC]=1
		{
			if(!cpu->IntLoadWord(15,sp))  // load PC
				return false;
			sp+=4;
		}
		if(((reglist8>>6) &1)==1) 		// if reglist[LR]=1
		{
