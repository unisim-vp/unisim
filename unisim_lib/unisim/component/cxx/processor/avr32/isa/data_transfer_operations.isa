op ld_d_a(0b101[3]:rp[4]:0b100[3]:0b00[2]:rd[3]:0b1[1])

ld_d_a.execute={

	if(rd==rp || rp==(rd+1)) return false;

	uint32_t addr= cpu->GetGPR(rp);
	
	if(!cpu->IntLoadWord((2*rd)+1,addr)) return false;
	if(!cpu->IntLoadWord(2*rd,addr+4)) return false;

	addr+=8;
	cpu->SetGPR(rp,addr);

	return true;
}

