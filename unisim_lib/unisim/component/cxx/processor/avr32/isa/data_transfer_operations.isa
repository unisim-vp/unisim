	return cpu->UintLoadByte(rd,addr);
}

ld_ub_c.disasm={
	os << "ld.ub\t" << REG_NAME[rd] << "," << REG_NAME[rp] <<"[0x" << std::hex <<(unsigned int) disp << "]";
}


