impl {
#include <unisim/component/cxx/processor/powerpc/isa/book_vle/vle.hh>
}

/* Add (2 operand) Immediate and Record */
op e_add2i_(28[6]:shl<11> sext <32> si_h[5]:ra[5]:17[5]:si_l[11]);
e_add2i_.var si : { int32_t } = { si_h | si_l }

e_add2i_.execute = {
	// Read the input operands
	int32_t a = cpu->GetGPR(ra);
	
	// Compute the result
	int32_t result = a + si;
	
	// Generate CR0: CR0[SO]=XER[SO] CR0[LT]=(result<0) CR0[GT]=(result>0) CR0[EQ]=(result==0)
	XER& xer = cpu->GetXER();
	CR& cr = cpu->GetCR();
	cr.Set<CR::CR0::SO>(xer.Get<XER::SO>());
	cr.Set<CR::CR0::LT>(result < 0);
	cr.Set<CR::CR0::GT>(result > 0);
	cr.Set<CR::CR0::EQ>(result == 0);

	// Write back the result
	cpu->SetGPR(ra, result);
	
	return true;
}

e_add2i_.disasm = {
	os << "e_add2i. " << GPRPrint(ra) << ',' << int(si_h|si_l);
}
